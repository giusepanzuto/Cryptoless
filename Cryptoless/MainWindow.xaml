<Window x:Class="Cryptoless.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525"
        DataContext="{Binding ., RelativeSource={RelativeSource Mode=Self}}" >
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="30" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Label Grid.Column="0" Content="Scrivi quì (Write here)" />
        <TextBox Grid.Column="0" Grid.Row="1" Text="{Binding SourceText, UpdateSourceTrigger=PropertyChanged}" HorizontalScrollBarVisibility="Hidden"  VerticalScrollBarVisibility="Auto" TextWrapping="Wrap" />
        <Label Grid.Column="1" Content="Leggi quì (Read here)" />
        <TextBox Grid.Column="1" Grid.Row="1" Text="{Binding ResultText}" IsReadOnly="True" HorizontalScrollBarVisibility="Hidden"  VerticalScrollBarVisibility="Auto" TextWrapping="Wrap"/>
    </Grid>
</Window>
